<% include ../partials/header %>
	<h1>Statuses
		<a href="/statuses/add" class="btn btn-success pull-right">Add Status</a>
	</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0;i < statuses.length;i++) { %>
				<tr>
					<td><h4><%= statuses[i].name %></h4></td>
					<td>
						<a href="/statuses/edit/<%= statuses[i].id %>" class="btn btn-default pull-right">Edit</a>
					</td>
				</tr>
			<% } %>
		</tbody>
	</table>
<% include ../partials/footer %>
